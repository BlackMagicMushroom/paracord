#!/bin/bash

PARACORDDIR="${HOME}/paracord"
PARACORDCORE="${PARACORDDIR}/core"
PARACORDBINDIR="${PARACORDDIR}/bin"

source $PARACORDCORE/pc_functions

if [[ $1 = 'commands' ]]; then
  # $ECHO -e "Usage: $0 configure|help|install|status|update|update-path|variables"
  $ECHO -e "Usage: $0 configure|help|install|status|update|update-path|variables"
  exit 0;
fi

source $PARACORDCORE/.colors
source $PARACORDCORE/.paracord_signature

# configure|help|install|status|update|update-path|variables
if [ $# -lt 1 ]; then
  pc_help
  exit 1
# need to fix this logic cause it sucks
#elif [ $# -gt 1 ] && [[ $1 != 'variables' || $1 != 'install' ]]; then
#  $ECHO -e "Easy ${RED}killer${NC}. Too many commands"
#  pc_help
#  exit 1
fi


case $1 in
  "configure")
    pc_configurePC
    pc_addParacordToPath
    ;;
#   "configure-git")
#     pc_updateGitConfig hush
#     ;;
  "help")
    pc_help
    ;;
  "install")
    pc_performInstall
    ;;
  "update")
    pc_performInstall update
    ;;
  "update-path")
    pc_addParacordToPath
    ;;
  "variables")
    if [ $# -lt 1 ]; then
        pc_displayDirs
    else
        pc_displayDirs ${2}
    fi
    ;;
  "status")
    pc_gitStatus
    ;;
  "edit")
    if [ "$#" -eq 3 ]; then
      pc_editFile $2 $3
    else
      pc_editFile $2
    fi
    ;;
  *)
    $ECHO -e "${RED}ERROR:${NC}"
    pc_help
    exit 1
    ;;
esac
